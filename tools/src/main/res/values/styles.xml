<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Shape -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- Shape -->

    <style name="Widget.MaterialComponents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="elevation">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/button_main</item>
        <item name="android:textColor">@color/button_main_label</item>
    </style>

    <style name="TextInputLayoutDefault" parent="Widget.MaterialComponents.TextInputLayout">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="TextViewSection" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_subtitle</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextViewLabel" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/color_subtitle</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextViewDescription" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/color_description</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>